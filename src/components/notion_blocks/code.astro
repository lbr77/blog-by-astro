---
let { block } = Astro.props;
let lang = "";

if (block.options != null && "language" in block.options) {
    lang = block.options.language;
    if(lang === "plain text"){
        lang = "plaintext"
    }
}
---

<!--<Prism code={block.text} lang={lang} class="p-8 my-8" />-->
<pre class={`language-${lang}`}><code>{block.text}</code></pre>